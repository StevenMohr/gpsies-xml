<h1>Tracks <%= "for "+@query if @query %></h1>
<div class="nexttoheader">
<%= render "search" %>
<% if @tracks.length == 0 %>
  <div id="no_tracks_found">Did not find anything. :(</div> 
<% end %>
</div>

 <% if @tracks.length > 0 %>
  <div id="show_tracks">
  <%= render "paginator" %>
  <table id="trackstable">
      <tr class="list_line_head">
          <th>Title</th>
          <th>Track Length</th>
          <th>Created At</th>
          <th>-</th>
      </tr>
      <div id="show_tracks">
  <% @tracks.each do |track| %>
      <tr class='<%= cycle 'list_line_odd', 'list_line_even'  %>'>
          <td><%= track.title %></td>
          <td><%= (track.track_length / 1000).round(2) %> km</td>
          <td><%= track.created_date.strftime("%m/%d/%Y") %></td>
          <td><%= link_to "Details", "track/#{track.uid}" %></td>
        </tr>
  <% end %>
  </table>
  <%= render "paginator" %>
  </div>
<% end %>
