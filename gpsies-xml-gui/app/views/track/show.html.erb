<h1>Track: <%= @track.title %></h1>

<div id="show">
	<div>
	ID: <%= @track.uid %>
	</div>
	<div>
	Title: <%= @track.title %>
	</div>
	<div>
		Description: <p><%= @track.description %></p>
	</div>
	<div>
	Track length: <%= (@track.track_length/1000).round(3) %>km
	</div>
	<div>
	Created at: <%= @track.created_date %>
	</div>
</div>

<%= content_tag :a, "List all tracks", :href => ".." %>
